<div class="in-breadcrumb">
    {% for item in knp_menu_get_breadcrumbs_array(knp_menu_get_current_item('admin_main')) %}
        {% if loop.first and item.label == 'root' %}
            <a href="{{ url('admin_default_dashboard') }}" class="in-breadcrumb__item in-breadcrumb__item--home">
                <i class="svg svg-house"></i>
            </a>
            <span class="in-breadcrumb__separator"> > </span>
        {% elseif loop.last %}
            <span class="in-breadcrumb__item in-breadcrumb__item--actual">{{ breadcrumb.lastItemOverridden ? breadcrumb.lastItemLabel : item.label }}</span>
        {% else %}
            <span class="in-breadcrumb__item">{{ item.label }}</span>
            <span class="in-breadcrumb__separator"> > </span>
        {% endif %}
    {% endfor %}
</div>
